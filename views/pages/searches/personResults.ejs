<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head") %>

<body>
    <%- include("../../partials/header/company") %>
    <h1 id="Title">Employees</h1>

    <% data1.forEach(item=>{%>
        <div class="personResult">
            <img src="<%= item.avatar%>" alt="personal pic">
            <h3><%= item.first_name%> <span><%= item.last_name%></span></h3>
            <p><%= item.phone%></p>
            <p><%= item.age%> year</p>
            <a class="curuse" href="<%= item.cv%>">Cv</a>
            <button id="<%= item.id%>" onClick=reply_clickPerson(this.id)>SEND OFFER</button>
            <div style="display: none;" class="<%= item.id%>">
                <button id="<%= item.id%>" onClick=reply_clickPerson(this.id)>X</button>
                <form action="/search/person/offer" method="POST">
                    <input type="text" name="description" value="">
                    <input type="text" name="location" value="">
                    <input type="hidden" name="person_id" value="<%= item.id%>">
                    <input type="hidden" name="company_id" value="<%= data.id%>">
                    <button>SEND OFFER</button>
                </form>
            </div>

        </div>

    <%  }) %>
    <%- include("../../partials/footer") %>
</body>
<div class='splash'>
    <img src="../../imgs/splash.gif" alt="">
</div>

</html>