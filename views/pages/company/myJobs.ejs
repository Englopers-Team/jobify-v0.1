<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head") %>

<body>
    <%- include("../../partials/header/company") %>

    <h1 id="Title">My Jobs</h1>


    <% data2.forEach((item,index)=>{ %>
    <div class="comp-div">

        <p><%= item.title%></p>
        <p><%= item.location%></p>
        <p><%= item.type%></p>
        

        <form class="deleteForm" action="/company/jobs/delete/<%= item.id%>?_method=delete" method="post">
            <button class="deleteBtn" type="submit">Delete</button></form>

        <button class="jobBtn updateBtn"><a href="#popup<%= index%>">Update</a>
    </div>

    <div id="popup<%= index%>" class="overlay">
        <div class="popup1">
            <h2>Update Job</h2>
            <a class="close1" href="#">&times;</a>
            <div class="content">
                <div class="group">
                    <img src="<%= item.avatar %>" alt="" width="160px">
                    <h3 style="font-size: 18px; font-weight: bold; margin: 10px 0px;"><%= item.first_name%>
                        <%= item.last_name%></h3>
                </div>
                <hr class="hrApply">
                <form action="/company/jobs/update/<%= item.id%>?_method=put" method="POST" class="fromApply0">
                    <div class="group">
                        <label for="titleee" class="label">Job Title</label>
                        <input id="titleee" class="input" required type="text" name="title" value="<%= item.title%>"
                            placeholder="Please enter job title">
                    </div>
                    <div class="group">
                        <label for="typeee" class="label">Job Type</label>
                        <select name="type" id="typeee">
                            <% if(item.type == 'Full Time'){%>
                                <option selected value="Full Time">Full Time</option>
                                <option value="Part Time">Part time</option>
                                <% }else { %>
                                <option value="Full Time">Full Time</option>
                                <option selected value="Part Time">Part time</option>
                                <% } %>
                        </select>
                    </div>
                    <div class="group">
                        <label for="country" class="label">Job Location</label>
                        <input id="country" class="input" required type="text" name="location" value="<%= item.location%>"
                            placeholder="Please enter job location">
                        <input type="hidden" name="person_id" value="<%= item.id%>">
                        <input type="hidden" name="company_id" value="<%= data.id%>">
                    </div>
                    <div class="group">
                        <label for="descriptionn" class="label">Description</label>
                        <input id="descriptionn" class="input" required type="text" name="description" value="<%= item.description%>"
                            placeholder="Please enter job description">
                    </div>
                    <div class="group">
                        <input type="submit" class="button signUpBtn" value="Update">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% })%>

</body>
<%- include("../../partials/footer") %>

</html>